<Window>:
    background_color: 0, 0, 0, 1

<Button>:
    canvas.before:
        PushMatrix
        Scale:
            origin: self.center
            x: self.scale
            y: self.scale
    canvas.after:
        PopMatrix

    scale: 1
    on_press: app.animate_button(self)


ScreenManager:
    HomeScreen:
    DataEntryScreen:
    MeasurementInputScreen:
    ViewDataScreen:
    PlotScreen:

<HomeScreen>:
    name: "home"
    BoxLayout:
        orientation: "vertical"
        spacing: 20
        padding: 40

        Label:
            text: "Pain Logger"
            font_size: "28sp"
            size_hint_y: None
            height: "48dp"

        Button:
            text: "Enter Measurement"
            background_color: app.get_rainbow_colour(0, 6)
            on_press: app.root.current = "data_entry"

        Button:
            text: "View Data"
            background_color: app.get_rainbow_colour(1, 6)
            on_press: app.root.current = "view_data"

        Button:
            text: "Plot Data"
            background_color: app.get_rainbow_colour(2, 6)
            on_press: app.root.current = "plot_screen"

        Button:
            text: "Export CSV"
            background_color: app.get_rainbow_colour(3, 6)
            on_press: app.export_csv()

        Button:
            text: "Delete All Data"
            background_color: app.get_rainbow_colour(4, 6)
            on_press: app.show_delete_confirmation()

<DataEntryScreen>:
    name: "data_entry"
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 10

        Label:
            text: "Select Body Section"
            font_size: "22sp"
            size_hint_y: None
            height: "40dp"

        GridLayout:
            cols: 3
            rows: 2
            spacing: 10
            size_hint: 1, 1

            Button:
                text: "Upper Left"
                background_color: app.get_rainbow_colour(1, 6)
                on_press: root.open_input_screen("UL")

            Button:
                text: "Head"
                background_color: app.get_rainbow_colour(2, 6)
                on_press: root.open_input_screen("Head")

            Button:
                text: "Upper Right"
                background_color: app.get_rainbow_colour(3, 6)
                on_press: root.open_input_screen("UR")

            Button:
                text: "Lower Left"
                background_color: app.get_rainbow_colour(4, 6)
                on_press: root.open_input_screen("LL")

            Button:
                text: "Axial"
                background_color: app.get_rainbow_colour(5, 6)
                on_press: root.open_input_screen("Axial")

            Button:
                text: "Lower Right"
                background_color: app.get_rainbow_colour(6, 6)
                on_press: root.open_input_screen("LR")

        Button:
            text: "Back"
            background_color: app.get_rainbow_colour(0, 6)
            size_hint_y: None
            height: "48dp"
            on_press: app.root.current = "home"

<MeasurementInputScreen>:
    name: "input_screen"
    selected_section: ""
    entered_value: ""
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 10

        Label:
            id: section_label
            text: "Enter measurement"
            font_size: "22sp"
            size_hint_y: None
            height: "40dp"

        Label:
            id: display_value
            text: ""
            font_size: "36sp"
            halign: "center"
            valign: "middle"
            size_hint_y: None
            height: "60dp"

        GridLayout:
            cols: 3
            spacing: 8
            padding: 10
            size_hint_y: None
            height: self.minimum_height

            Button:
                text: "1"
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number("1")
            Button:
                text: "2"
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number("2")
            Button:
                text: "3"
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number("3")
            Button:
                text: "4"
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number("4")
            Button:
                text: "5"
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number("5")
            Button:
                text: "6"
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number("6")
            Button:
                text: "7"
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number("7")
            Button:
                text: "8"
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number("8")
            Button:
                text: "9"
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number("9")
            Button:
                text: "."
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number(".")
            Button:
                text: "0"
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number("0")
            Button:
                text: "âŒ«"
                size_hint_y: None
                height: "64dp"
                on_press: root.delete_last()

        Button:
            text: "Save"
            background_color: app.get_rainbow_colour(1, 6)
            size_hint_y: None
            height: "48dp"
            on_press: root.save_measurement()

        Label:
            id: status_label
            text: ""
            color: 1, 0, 0, 1
            font_size: "14sp"

        Button:
            text: "Back"
            background_color: app.get_rainbow_colour(0, 6)
            size_hint_y: None
            height: "48dp"
            on_press: app.root.current = "data_entry"


<ViewDataScreen>:
    name: "view_data"
    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 10

        Label:
            text: "Saved Data"
            font_size: "20sp"
            size_hint_y: None
            height: "40dp"

        GridLayout:
            id: data_table
            cols: 3
            spacing: 5
            size_hint_y: 1

        Button:
            text: "Back"
            background_color: app.get_rainbow_colour(0, 6)
            size_hint_y: None
            height: "48dp"
            on_press: app.root.current = "home"

<PlotScreen>:
    name: "plot_screen"
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 10

        Label:
            text: "Pain Over Time"
            font_size: "20sp"
            size_hint_y: None
            height: "40dp"

        BoxLayout:
            id: plot_container
            size_hint_y: 1

        Button:
            text: "Back"
            background_color: app.get_rainbow_colour(0, 6)
            size_hint_y: None
            height: "48dp"
            on_press: app.root.current = "home"
