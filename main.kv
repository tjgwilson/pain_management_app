<Window>:
    background_color: 0, 0, 0, 1

<Button>:
    canvas.before:
        PushMatrix
        Scale:
            origin: self.center
            x: self.scale
            y: self.scale
    canvas.after:
        PopMatrix

    scale: 1
    on_press: app.animate_button(self)

ScreenManager:
    HomeScreen:
    DataEntryScreen:
    MeasurementInputScreen:
    ViewDataScreen:
    PlotScreen:
    StatsScreen:
    SleepInputScreen:
    ActivityScreen:
    NotesScreen:

<HomeScreen>:
    name: "home"
    BoxLayout:
        orientation: "vertical"
        spacing: 20
        padding: 40

        Label:
            text: "Pain Logger"
            font_size: "28sp"
            size_hint_y: None
            height: "48dp"

        Button:
            text: "Enter Measurement"
            background_color: app.get_rainbow_colour(0, 6)
            on_press: app.root.current = "data_entry"

        Button:
            text: "Log Sleep"
            background_color: app.get_rainbow_colour(1, 7)
            on_press: app.root.current = "sleep_input"

        Button:
            text: "Log Activity"
            background_color: app.get_rainbow_colour(5, 6)
            on_press: app.root.current = "activity"

        Button:
            text: "View Data"
            background_color: app.get_rainbow_colour(2, 6)
            on_press: app.root.current = "view_data"

        Button:
            text: "Notes"
            background_color: app.get_rainbow_colour(6, 6)
            on_press: app.root.current = "notes"

        Button:
            text: "View Stats"
            background_color: app.get_rainbow_colour(4, 6)
            on_press: app.root.current = "stats_screen"

        Button:
            text: "Plot Data"
            background_color: app.get_rainbow_colour(3, 6)
            on_press: app.root.current = "plot_screen"

        Button:
            text: "Export CSV"
            background_color: app.get_rainbow_colour(7, 8)
            on_press: app.export_popup()

        Button:
            text: "Delete All Data"
            background_color: app.get_rainbow_colour(8, 9)
            on_press: app.show_delete_confirmation()

<DataEntryScreen>:
    name: "data_entry"
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 10

        Label:
            text: "Select Body Section"
            font_size: "22sp"
            size_hint_y: None
            height: "40dp"

        GridLayout:
            cols: 3
            rows: 2
            spacing: 10
            size_hint: 1, 1

            Button:
                text: "Left Upper"
                background_color: app.get_rainbow_colour(1, 6)
                on_press: root.open_input_screen("LU")

            Button:
                text: "Head"
                background_color: app.get_rainbow_colour(2, 6)
                on_press: root.open_input_screen("Head")

            Button:
                text: "Right Upper"
                background_color: app.get_rainbow_colour(3, 6)
                on_press: root.open_input_screen("RU")

            Button:
                text: "Left Lower"
                background_color: app.get_rainbow_colour(4, 6)
                on_press: root.open_input_screen("LL")

            Button:
                text: "Axial"
                background_color: app.get_rainbow_colour(5, 6)
                on_press: root.open_input_screen("Axial")

            Button:
                text: "Right Lower"
                background_color: app.get_rainbow_colour(6, 6)
                on_press: root.open_input_screen("RL")

        Button:
            text: "Back"
            background_color: app.get_rainbow_colour(0, 6)
            size_hint_y: None
            height: "48dp"
            on_press: app.root.current = "home"

<MeasurementInputScreen>:
    name: "input_screen"
    selected_section: ""
    entered_value: ""
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 10

        Label:
            id: section_label
            text: "Enter measurement"
            font_size: "22sp"
            size_hint_y: None
            height: "40dp"

        Label:
            id: display_value
            text: ""
            font_size: "36sp"
            halign: "center"
            valign: "middle"
            size_hint_y: None
            height: "60dp"

        GridLayout:
            cols: 3
            spacing: 8
            padding: 10
            size_hint_y: None
            height: self.minimum_height

            Button:
                text: "1"
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number("1")
            Button:
                text: "2"
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number("2")
            Button:
                text: "3"
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number("3")
            Button:
                text: "4"
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number("4")
            Button:
                text: "5"
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number("5")
            Button:
                text: "6"
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number("6")
            Button:
                text: "7"
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number("7")
            Button:
                text: "8"
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number("8")
            Button:
                text: "9"
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number("9")
            Button:
                text: "."
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number(".")
            Button:
                text: "0"
                size_hint_y: None
                height: "64dp"
                on_press: root.append_number("0")
            Button:
                text: "âŒ«"
                size_hint_y: None
                height: "64dp"
                on_press: root.delete_last()

        Label:
            id: status_label
            text: ""
            color: 1, 0, 0, 1
            font_size: "14sp"

        Button:
            text: "Save and Return"
            size_hint_y: None
            height: "48dp"
            on_press: root.save_and_return()

<ViewDataScreen>:
    name: "view_data"
    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 10

        Label:
            text: "Saved Data"
            font_size: "20sp"
            size_hint_y: None
            height: "40dp"

        ScrollView:
            size_hint_y: 1
            do_scroll_x: False
            BoxLayout:
                id: data_box
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height

        Button:
            text: "Back"
            background_color: app.get_rainbow_colour(0, 6)
            size_hint_y: None
            height: "48dp"
            on_press: app.root.current = "home"


<PlotScreen>:
    name: "plot_screen"
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 10

        Label:
            text: "Pain Over Time"
            font_size: "20sp"
            size_hint_y: None
            height: "40dp"

        BoxLayout:
            id: plot_container
            size_hint_y: 1

        Button:
            text: "Back"
            background_color: app.get_rainbow_colour(0, 6)
            size_hint_y: None
            height: "48dp"
            on_press: app.root.current = "home"

<StatsScreen>:
    name: "stats_screen"
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 10

        Label:
            text: "Statistics Summary"
            font_size: "22sp"
            size_hint_y: None
            height: "40dp"

        BoxLayout:
            id: stats_box
            orientation: "vertical"
            spacing: 5
            size_hint_y: 1

        Button:
            text: "Back"
            size_hint_y: None
            height: "48dp"
            on_press: app.root.current = "home"

<SleepInputScreen>:
    name: "sleep_input"
    hours_slept: ""
    sleep_quality: ""
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 20

        Label:
            text: "Enter Sleep Data"
            font_size: "22sp"
            size_hint_y: None
            height: "40dp"

        TextInput:
            id: hours_input
            hint_text: "Hours Slept"
            input_filter: "float"
            multiline: False
            size_hint_y: None
            height: "40dp"

        Label:
            text: "Sleep Quality (1-3)"
            font_size: "18sp"
            size_hint_y: None
            height: "30dp"

        BoxLayout:
            spacing: 10
            size_hint_y: None
            height: "48dp"

            Button:
                text: "1"
                on_press: root.set_quality("1")
            Button:
                text: "2"
                on_press: root.set_quality("2")
            Button:
                text: "3"
                on_press: root.set_quality("3")

        Label:
            id: quality_label
            text: "Quality selected: None"
            size_hint_y: None
            height: "30dp"

        Button:
            text: "Save and Return"
            size_hint_y: None
            height: "48dp"
            on_press: root.save_sleep_data()

        Button:
            text: "Back"
            size_hint_y: None
            height: "48dp"
            background_color: app.get_rainbow_colour(0, 7)
            on_press: app.root.current = "home"

<ActivityScreen>:
    name: "activity"
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 20

        Label:
            text: "Log Activity"
            font_size: "22sp"
            size_hint_y: None
            height: "40dp"

        Spinner:
            id: activity_level_spinner
            text: "Select level"
            values: ["1", "2", "3", "4", "5"]
            size_hint_y: None
            height: "40dp"

        TextInput:
            id: activity_name_input
            hint_text: "Enter activity name (optional)"
            multiline: False
            size_hint_y: None
            height: "40dp"

        Button:
            text: "Save and Return"
            size_hint_y: None
            height: "48dp"
            on_press: root.save_activity()

        Button:
            text: "Return"
            size_hint_y: None
            height: "48dp"
            on_press: root.return_without_save()

<NotesScreen>:
    name: "notes"
    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 20

        Label:
            text: "Edit Notes"
            font_size: "22sp"
            size_hint_y: None
            height: "40dp"

        TextInput:
            id: notes_input
            hint_text: "Enter or edit notes for current hour"
            multiline: True
            size_hint_y: 1

        Button:
            text: "Save and Return"
            size_hint_y: None
            height: "48dp"
            on_press: root.save_notes()

        Button:
            text: "Return"
            size_hint_y: None
            height: "48dp"
            on_press: root.manager.current = "home"
